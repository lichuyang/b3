<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按钮正常时的样式 -->
    <item>
        <!-- shape：按钮形状 -->
        <shape android:shape="rectangle">
            <!-- solid：背景填充颜色 -->
            <solid android:color="#000000" />

            <!-- stroke：边框 -->
            <stroke android:width="1dip" android:color="#262626" />
        </shape>
    </item>

    <!-- 按钮获得焦点时的样式 -->
    <item android:state_focused="true">
        <!-- shape：按钮形状 -->
        <shape android:shape="rectangle">
            <!-- solid：背景填充颜色 -->
            <solid android:color="#606161" />
            <!-- stroke：边框 -->
            <stroke android:width="1dip" android:color="#373838" />
        </shape>
    </item>

    <item  android:state_pressed="true">
        <!-- shape：按钮形状 -->
        <shape android:shape="rectangle">
            <!-- solid：背景填充颜色 -->
            <solid android:color="#606161" />
            <!-- stroke：边框 -->
            <stroke android:width="1dip" android:color="#373838" />
        </shape>
    </item>
</selector>