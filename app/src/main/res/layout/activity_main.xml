<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ecebeb"
    tools:context="com.lcy.baidusou.MainActivity">
    <LinearLayout
        android:id="@+id/above"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">
   <EditText
       android:id="@+id/inputText"
       android:layout_width="0dp"
       android:layout_height="40dp"
       android:background="@drawable/bg_edittext"
       android:padding="5dp"
       android:textColorHint="#AAAAAA"
       android:textSize="15dp"
       android:singleLine="true"
       android:hint="请输入..."
       android:layout_weight="5"/>
    <Button
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_style"
        android:text="搜索"
        android:layout_toRightOf="@id/inputText"
        android:layout_marginLeft="10dp"
        android:onClick="onClick"
        android:layout_weight="1.5"/>
    </LinearLayout>
    <TextView
        android:id="@+id/total_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#104E8B"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@id/above"
        />
    <RelativeLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="#000000"
        android:text="全力搜，一搜就有！"
        android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/total_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.lcy.baidusou.ui.PullUpLoadMoreListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transcriptMode="alwaysScroll"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="5dp"
            android:layout_marginTop="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
        </com.lcy.baidusou.ui.PullUpLoadMoreListView>
    </RelativeLayout>
</RelativeLayout>
